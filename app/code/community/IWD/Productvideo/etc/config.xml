<?xml version="1.0"?>
<config>
    <modules>
        <IWD_Productvideo>
            <version>1.1.4</version>
        </IWD_Productvideo>
    </modules>

    <admin>
        <routers>
            <iwd_productvideo>
                <use>admin</use>
                <args>
                    <module>IWD_Productvideo</module>
                    <frontName>iwd_productvideo</frontName>
                </args>
            </iwd_productvideo>
        </routers>
    </admin>

    <adminhtml>
        <events>
            <controller_action_predispatch>
                <observers>
                    <productvideo_check_related>
                        <type>singleton</type>
                        <class>iwd_productvideo/observer</class>
                        <method>checkRequiredModules</method>
                    </productvideo_check_related>
                </observers>
            </controller_action_predispatch>
        </events>
        <layout>
            <updates>
                <iwd_productvideo>
                    <file>iwd_productvideo.xml</file>
                </iwd_productvideo>
            </updates>
        </layout>
    </adminhtml>

    <frontend>
        <routers>
            <iwd_productvideo>
                <use>standard</use>
                <args>
                    <module>IWD_Productvideo</module>
                    <frontName>iwd_productvideo</frontName>
                </args>
            </iwd_productvideo>
        </routers>
        <layout>
           <updates>
                <iwd_productvideo>
                    <file>iwd_productvideo.xml</file>
                </iwd_productvideo>
            </updates>
        </layout>
    </frontend>

    <global>
        <helpers>
            <iwd_productvideo>
                <class>IWD_Productvideo_Helper</class>
            </iwd_productvideo>
        </helpers>

        <blocks>
            <iwd_productvideo>
                <class>IWD_Productvideo_Block</class>
            </iwd_productvideo>
        </blocks>

        <models>
            <iwd_productvideo>
                <class>IWD_Productvideo_Model</class>
                <resourceModel>iwd_productvideo_mysql4</resourceModel>
            </iwd_productvideo>
            <iwd_productvideo_mysql4>
                <class>IWD_Productvideo_Model_Mysql4</class>
                <entities>
                    <video>
                        <table>iwd_video</table>
                    </video>
                    <product_video>
                        <table>iwd_product_video</table>
                    </product_video>
                </entities>
            </iwd_productvideo_mysql4>
        </models>

        <resources>
            <iwd_productvideo_setup>
                <setup>
                    <module>IWD_Productvideo</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </iwd_productvideo_setup>

            <iwd_productvideo_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </iwd_productvideo_write>

            <iwd_productvideo_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </iwd_productvideo_read>
        </resources>
    </global>

    <default>
        <iwd_productvideo>
            <general>
                <enabled>1</enabled>
            </general>
            <video>
                <local_player>0</local_player>
                <in_popup>0</in_popup>
            </video>
            <zoom>
                <enabled>1</enabled>
                <height>364</height>
                <width>364</width>
                <height_zoom>364</height_zoom>
                <width_zoom>364</width_zoom>
                <ratio>3</ratio>
                <position>2</position><!--right-->
            </zoom>
            <slider>
                <enabled>1</enabled>
                <height>75</height>
                <width>75</width>
                <position>4</position><!--bottom-->
                <sort_order>image_video</sort_order>
                <title></title>
            </slider>
        </iwd_productvideo>
    </default>
</config>